@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "Admin · Nông Sản Sạch")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css">

    <style>
        html, body {
            height: 100%;
        }

        body {
            min-height: 100vh;
            background-color: #f9fff9;
            font-family: "Segoe UI", sans-serif;
        }

        /* --- Bố cục chính --- */
        .admin-shell {
            display: flex;
            min-height: 100vh;
        }

        /* --- SIDEBAR --- */
        .sidebar {
            width: 260px;
            position: sticky;
            top: 0;
            height: 100vh;
            overflow: auto;
            background: #66bb6a; /* xanh lá tươi, chữ trắng nổi */
            color: #fff;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.08);
        }

            .sidebar .navbar-brand {
                color: #ffffff;
                font-size: 1.35rem;
                font-weight: 700;
                display: flex;
                align-items: center;
                gap: .5rem;
                margin-bottom: 1rem;
            }

                .sidebar .navbar-brand i {
                    font-size: 1.5rem;
                }

            .sidebar .nav-link {
                color: #f1f8f1;
                border-radius: .5rem;
                margin-bottom: .3rem;
                font-weight: 600;
                display: flex;
                align-items: center;
                gap: .65rem;
                font-size: 1rem;
                padding: .55rem .9rem;
                transition: all .2s ease-in-out;
            }

                .sidebar .nav-link i {
                    font-size: 1.2rem;
                    opacity: 0.95;
                }

                .sidebar .nav-link.active {
                    background: #2e7d32; /* xanh đậm cho active */
                    color: #fff;
                    font-weight: 700;
                    box-shadow: inset 0 0 0 2px rgba(255,255,255,0.2);
                }

                .sidebar .nav-link:hover {
                    background: rgba(255,255,255,0.2);
                    color: #fff;
                    transform: translateX(3px);
                }

            .sidebar hr {
                border-color: rgba(255,255,255,0.4);
            }

            /* --- Nút về trang khách --- */
            .sidebar .btn-outline-light {
                color: #fff;
                border-color: #fff;
                font-weight: 600;
                width: 100%;
                transition: all 0.2s ease-in-out;
            }

                .sidebar .btn-outline-light:hover {
                    background: #fff;
                    color: #2e7d32;
                }

        /* --- CONTENT --- */
        .content {
            flex: 1;
            display: flex;
            flex-direction: column;
            background-color: #ffffff;
            color: #000;
        }

            .content main {
                flex: 1;
                padding: 2rem;
            }

        footer {
            background: #e8f5e9;
            color: #2e7d32;
            text-align: center;
            padding: .8rem;
            font-size: .9rem;
        }

        .toast-container {
            z-index: 1080;
        }
    </style>
</head>

<body>
    <div class="admin-shell">
        <!-- Sidebar -->
        <aside class="sidebar p-3">
            <a class="navbar-brand text-decoration-none"
               asp-area="Admin" asp-controller="Home" asp-action="Index">
                <i class="bi bi-leaf"></i> <span>Trang quản trị</span>
            </a>

            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
                       asp-area="Admin" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-speedometer2"></i> Bảng điều khiển
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "SanPhams" ? "active" : "")"
                       asp-area="Admin" asp-controller="SanPhams" asp-action="Index">
                        <i class="bi bi-basket2"></i> Sản phẩm
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "DanhMucs" ? "active" : "")"
                       asp-area="Admin" asp-controller="DanhMucs" asp-action="Index">
                        <i class="bi bi-tags"></i> Danh mục
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ThuongHieus" ? "active" : "")"
                       asp-area="Admin" asp-controller="ThuongHieus" asp-action="Index">
                        <i class="bi bi-bookmark-star"></i> Thương hiệu
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "DonHangs" ? "active" : "")"
                       asp-area="Admin" asp-controller="DonHangs" asp-action="Index">
                        <i class="bi bi-receipt"></i> Đơn hàng
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "TaiKhoans" ? "active" : "")"
                       asp-area="Admin" asp-controller="TaiKhoans" asp-action="Index">
                        <i class="bi bi-people"></i> Tài khoản
                    </a>
                </li>
            </ul>

            <hr />
            <a class="btn btn-sm btn-outline-light mt-2"
               asp-area="Customer" asp-controller="SanPhams" asp-action="Index">
                <i class="bi bi-house-door"></i> Về trang khách
            </a>
        </aside>

        <!-- Content -->
        <div class="content">
            <main>
                @RenderBody()
            </main>
           
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

    @* Toast (tương thích khóa cũ & mới) *@
    @{
        // Ưu tiên khóa mới; nếu chưa đổi hết trong controller, fallback về khóa cũ
        var toastMsgRaw = (TempData["ToastMessage"] as string) ?? (TempData["toast"] as string);
        var toastTypeRaw = (TempData["ToastType"] as string) ?? (TempData["toastType"] as string) ?? "success";

        // Chuẩn hóa kiểu: cho phép dùng "error" trong controller, tự map thành "danger"
        var toastType = toastTypeRaw?.ToLowerInvariant();
        toastType = toastType switch
        {
            "error" => "danger",
            "warn" => "warning",
            "success" or "info" or "warning" or "danger" or "primary" or "secondary" or "light" or "dark"
            => toastType,
            _ => "success"
        };
    }
    @if (!string.IsNullOrWhiteSpace(toastMsgRaw))
    {
        <div class="toast-container position-fixed top-0 end-0 p-3">
            <div id="liveToast" class="toast align-items-center text-bg-@toastType border-0"
                 role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3200">
                <div class="d-flex">
                    <div class="toast-body">@toastMsgRaw</div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                            data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
        <script>
            (() => {
                const el = document.getElementById('liveToast');
                if (el) new bootstrap.Toast(el).show();
            })();
        </script>
    }
</body>
</html>
