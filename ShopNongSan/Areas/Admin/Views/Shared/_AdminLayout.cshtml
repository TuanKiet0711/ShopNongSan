@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "Admin · Nông Sản Sạch")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        html, body { height: 100%; }
        body { min-height: 100vh; }

        /* Khung 2 cột chiếm toàn chiều cao -> để footer dính đáy */
        .admin-shell { display: flex; min-height: 100vh; }

        .sidebar {
            width:260px; position:sticky; top:0; height:100vh; overflow:auto;
        }
        @@media (max-width: 991.98px) {
            .sidebar { position:static; height:auto; width:100%; }
        }

        /* Cột nội dung là flex-column; main fill; footer đẩy xuống */
        .content { flex:1; display:flex; flex-direction:column; min-height:100vh; }
        .content main { flex:1 1 auto; }
        .content footer { margin-top:auto; }

        .nav-link.active { background:#e7f1ff; font-weight:600; }
    </style>
</head>
<body>
<div class="admin-shell">
    <!-- Sidebar -->
    <aside class="sidebar bg-light border-end p-3">
        <a class="navbar-brand fw-bold d-block mb-3 text-decoration-none"
           asp-area="Admin" asp-controller="Home" asp-action="Index">
            Admin Nông Sản Sạch
        </a>
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Home"?"active":"")"
                   asp-area="Admin" asp-controller="Home" asp-action="Index">Bảng điều khiển</a>
            </li>
           
           
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="SanPhams"?"active":"")"
                   asp-area="Admin" asp-controller="SanPhams" asp-action="Index">Sản phẩm</a>
            </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="DanhMucs"?"active":"")"
                       asp-area="Admin" asp-controller="DanhMucs" asp-action="Index">Danh mục</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ThuongHieus"?"active":"")"
                       asp-area="Admin" asp-controller="ThuongHieus" asp-action="Index">Thương hiệu</a>
                </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="DonHangs"?"active":"")"
                   asp-area="Admin" asp-controller="DonHangs" asp-action="Index">Đơn hàng</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="TaiKhoans"?"active":"")"
                   asp-area="Admin" asp-controller="TaiKhoans" asp-action="Index">Tài khoản</a>
            </li>
        </ul>
        <hr />
        <a class="btn btn-sm btn-outline-secondary" asp-area="Customer" asp-controller="SanPhams" asp-action="Index">Về trang khách</a>
    </aside>

    <!-- Content -->
    <div class="content">
        <!-- Nếu không cần top bar, bỏ hẳn nav để tránh đẩy layout -->
        <main class="container py-4">
            @RenderBody()
        </main>

        <footer class="border-top py-4 text-center text-muted">
            <div class="container">© @DateTime.Now.Year Nông Sản Sạch</div>
        </footer>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)

@* Toast *@
@{
    var toastMsg = TempData["ToastMessage"] as string;
    var toastType = (TempData["ToastType"] as string) ?? "success";
}
@if (!string.IsNullOrEmpty(toastMsg))
{
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index:1080;">
        <div id="liveToast" class="toast align-items-center text-bg-@toastType border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000">
            <div class="d-flex">
                <div class="toast-body">@toastMsg</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    <script>
        (function () {
            var el = document.getElementById('liveToast');
            if (el) new bootstrap.Toast(el).show();
        })();
    </script>
}
</body>
</html>
