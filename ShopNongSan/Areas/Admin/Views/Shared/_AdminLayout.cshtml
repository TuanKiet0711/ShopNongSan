@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@(ViewData["Title"] ?? "Admin · Nông Sản Sạch")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/admin.css">
    <style>
        html, body {
            height: 100%;
        }

        body {
            min-height: 100vh;
            background-color: #f9fff9;
        }

        /* Khung 2 cột */
        .admin-shell {
            display: flex;
            min-height: 100vh;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            position: sticky;
            top: 0;
            height: 100vh;
            overflow: auto;
            background: #a5d6a7; /* xanh lá nhạt */
            color: #1b5e20;
        }

            .sidebar .navbar-brand {
                color: #1b5e20;
                font-size: 1.2rem;
            }

            .sidebar .nav-link {
                color: #1b5e20;
                border-radius: .5rem;
                margin-bottom: .25rem;
            }

                .sidebar .nav-link.active {
                    background: #81c784; /* xanh lá pastel hơn */
                    font-weight: 600;
                    color: #fff;
                }

                .sidebar .nav-link:hover {
                    background: #66bb6a; /* xanh lá tươi */
                    color: #fff;
                }

            /* Nút về trang khách */
            .sidebar .btn-outline-secondary {
                color: #1b5e20;
                border-color: #1b5e20;
            }

                .sidebar .btn-outline-secondary:hover {
                    background: #66bb6a;
                    border-color: #66bb6a;
                    color: #fff;
                }


        /* Content */
        /* Content nền trắng, chữ đen */
        .content {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            background-color: #ffffff !important; /* ép nền trắng */
            color: #000000 !important; /* ép chữ đen */
        }

            /* Toàn bộ text trong content cũng đen */
            .content * {
                color: #000000 !important;
                background-color: transparent !important;
            }


            .content main {
                flex: 1 1 auto;
            }

            .content footer {
                margin-top: auto;
            }

        footer {
            background: #e8f5e9;
            color: #2e7d32;
        }


    </style>

</head>
<body>
<div class="admin-shell">
    <!-- Sidebar -->
    <aside class="sidebar p-3">
        <a class="navbar-brand fw-bold d-block mb-3 text-decoration-none"
           asp-area="Admin" asp-controller="Home" asp-action="Index">
            Admin Nông Sản Sạch
        </a>
        <ul class="nav nav-pills flex-column">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="Home"?"active":"")"
                   asp-area="Admin" asp-controller="Home" asp-action="Index">Bảng điều khiển</a>
            </li>
           
           
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="SanPhams"?"active":"")"
                   asp-area="Admin" asp-controller="SanPhams" asp-action="Index">Sản phẩm</a>
            </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="DanhMucs"?"active":"")"
                       asp-area="Admin" asp-controller="DanhMucs" asp-action="Index">Danh mục</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="ThuongHieus"?"active":"")"
                       asp-area="Admin" asp-controller="ThuongHieus" asp-action="Index">Thương hiệu</a>
                </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="DonHangs"?"active":"")"
                   asp-area="Admin" asp-controller="DonHangs" asp-action="Index">Đơn hàng</a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString()=="TaiKhoans"?"active":"")"
                   asp-area="Admin" asp-controller="TaiKhoans" asp-action="Index">Tài khoản</a>
            </li>
        </ul>
        <hr />
        <a class="btn btn-sm btn-outline-secondary" asp-area="Customer" asp-controller="SanPhams" asp-action="Index">Về trang khách</a>
    </aside>

    <!-- Content -->
    <div class="content">
        <!-- Nếu không cần top bar, bỏ hẳn nav để tránh đẩy layout -->
        <main class="container py-4">
            @RenderBody()
        </main>

       
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
@RenderSection("Scripts", required: false)

@* Toast *@
@{
    var toastMsg = TempData["ToastMessage"] as string;
    var toastType = (TempData["ToastType"] as string) ?? "success";
}
@if (!string.IsNullOrEmpty(toastMsg))
{
    <div class="toast-container position-fixed top-0 end-0 p-3" style="z-index:1080;">
        <div id="liveToast" class="toast align-items-center text-bg-@toastType border-0" role="alert" aria-live="assertive" aria-atomic="true" data-bs-delay="3000">
            <div class="d-flex">
                <div class="toast-body">@toastMsg</div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    </div>
    <script>
        (function () {
            var el = document.getElementById('liveToast');
            if (el) new bootstrap.Toast(el).show();
        })();
    </script>
}
</body>
</html>
