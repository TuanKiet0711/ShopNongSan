@model ShopNongSan.Models.ThuongHieu
@{
    ViewData["Title"] = "Xoá thương hiệu";
}
<h2 class="mb-3">Xoá thương hiệu</h2>

<div class="card p-3">
    <h5>@Model.Ten</h5>
    <form asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Xoá thương hiệu này?')">Xoá</button>
        <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
    </form>
</div>
