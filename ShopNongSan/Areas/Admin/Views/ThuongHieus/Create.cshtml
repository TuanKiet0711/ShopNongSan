@model ThuongHieu
@{
    ViewData["Title"] = "Thêm thương hiệu";
}

<h2 class="fw-bold mb-4 text-success">
    <i class="bi bi-bookmark-plus"></i> Thêm thương hiệu
</h2>

<div class="card shadow-sm border-0">
    <div class="card-body">
        <form asp-action="Create" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="col-md-6">
                <label class="form-label fw-semibold">Tên thương hiệu <span class="text-danger">*</span></label>
                <input asp-for="Ten" class="form-control form-control-lg shadow-sm"
                       placeholder="Nhập tên thương hiệu..." required />
                <span asp-validation-for="Ten" class="text-danger small"></span>
            </div>

            <div class="col-12 d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-gradient-green px-4 fw-semibold">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4 fw-semibold">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .btn-gradient-green {
        background: linear-gradient(45deg, #2e7d32, #43a047);
        color: #fff !important;
        border: none;
        border-radius: .5rem;
        transition: all .25s ease-in-out;
    }

        .btn-gradient-green:hover {
            background: linear-gradient(45deg, #1b5e20, #2e7d32);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,.15);
        }

    .btn-secondary {
        border-radius: .5rem;
        font-weight: 600;
    }

    .form-control {
        border-radius: .5rem;
        border-color: #ced4da;
        transition: all 0.2s ease-in-out;
    }

        .form-control:focus {
            border-color: #198754;
            box-shadow: 0 0 0 0.25rem rgba(25, 135, 84, 0.25);
        }

    label.form-label {
        color: #1b5e20;
    }

    .card {
        border-radius: .75rem;
    }
</style>
