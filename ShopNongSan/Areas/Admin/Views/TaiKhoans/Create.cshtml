@model TaiKhoan
@{
    ViewData["Title"] = "Thêm tài khoản";
    var listVT = ViewBag.VaiTroList as List<string>;
}

<h2 class="mb-3">Thêm tài khoản</h2>

<form asp-action="Create" method="post" class="row g-3">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="col-md-4">
        <label class="form-label">Tên đăng nhập <span class="text-danger">*</span></label>
        <input asp-for="TenDangNhap" class="form-control" required />
        <span asp-validation-for="TenDangNhap" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Mật khẩu <span class="text-danger">*</span></label>
        <input asp-for="MatKhau" type="text" class="form-control" required />
        <span asp-validation-for="MatKhau" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Họ tên <span class="text-danger">*</span></label>
        <input asp-for="HoTen" class="form-control" required />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label class="form-label">Vai trò <span class="text-danger">*</span></label>
        <select asp-for="VaiTro" class="form-select" required>
            @foreach (var vt in listVT)
            {
                <option value="@vt">@vt</option>
            }
        </select>
        <span asp-validation-for="VaiTro" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Lưu</button>
        <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
