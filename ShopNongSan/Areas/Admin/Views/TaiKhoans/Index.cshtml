@model IEnumerable<TaiKhoan>
@{
    ViewData["Title"] = "Quản lý tài khoản";
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalCount = ViewBag.TotalCount ?? 0;
    string q = ViewBag.Q as string ?? "";
    string vaiTro = ViewBag.VaiTro as string ?? "";
    var listVT = (ViewBag.VaiTroList as List<string>) ?? new List<string> { "Admin", "Staff", "Customer" };

    string RoleBadge(string r) =>
        r?.Equals("Admin", StringComparison.OrdinalIgnoreCase) == true ? "badge bg-danger text-white"
      : r?.Equals("Staff", StringComparison.OrdinalIgnoreCase) == true ? "badge bg-primary text-white"
      : "badge bg-success text-white";
}

<h2 class="fw-bold mb-4 text-success">
    <i class="bi bi-people"></i> Quản lý tài khoản
</h2>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <div class="col-lg-5">
                <label class="form-label mb-1">Tìm kiếm</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="q" value="@q" class="form-control" placeholder="Tên đăng nhập, họ tên..." />
                    <button type="button" class="btn btn-outline-secondary"
                            onclick="this.closest('.input-group').querySelector('input[name=q]').value=''; this.form.submit();">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            </div>

            <div class="col-lg-3">
                <label class="form-label mb-1">Vai trò</label>
                <select name="vaiTro" class="form-select">
                    <option value="">-- Tất cả --</option>
                    @foreach (var vt in listVT)
                    {
                        if (vaiTro == vt)
                        {
                            <option value="@vt" selected>@vt</option>
                        }
                        else
                        {
                            <option value="@vt">@vt</option>
                        }
                    }
                </select>
            </div>

            <div class="col-md-4 col-lg-3 col-xl-2">
                <div class="d-flex gap-2">
                    <input type="hidden" name="page" value="1" />
                    <button type="submit" class="btn btn-primary px-3 btn-nowrap">
                        <i class="bi bi-funnel"></i> Lọc
                    </button>
                    <a asp-action="Index" class="btn btn-danger px-3 btn-nowrap">
                        <i class="bi bi-x-circle"></i> Xóa bộ lọc
                    </a>
                </div>
            </div>

            <div class="col-12 d-flex justify-content-between align-items-center">
                <span class="small text-muted">Tổng: @totalCount</span>
                <a asp-action="Create" class="btn btn-gradient-green fw-semibold shadow-sm px-4">
                    <i class="bi bi-plus-circle"></i> Thêm mới
                </a>
            </div>
        </form>
    </div>
</div>

<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover table-bordered align-middle mb-0">
        <thead class="table-success">
            <tr class="text-center">
                <th>Tên đăng nhập</th>
                <th>Họ tên</th>
                <th>Vai trò</th>
                <th>Mật khẩu</th>
                <th>Ngày tạo</th>
                <th style="width:160px">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tk in Model)
            {
                <tr>
                    <td class="fw-semibold">@tk.TenDangNhap</td>
                    <td class="text-muted">@tk.HoTen</td>
                    <td><span class="@RoleBadge(tk.VaiTro)">@tk.VaiTro</span></td>
                    <td class="text-muted">@tk.MatKhau</td>
                    <td class="text-muted">@tk.NgayTao.ToString("dd/MM/yyyy")</td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@tk.Id" class="btn btn-sm btn-warning text-dark">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@tk.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (totalPages > 1)
{
    <div class="mt-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(page <= 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page - 1)"
                       asp-route-q="@q"
                       asp-route-vaiTro="@vaiTro">«</a>
                </li>
                @for (int i = Math.Max(1, page - 2); i <= Math.Min(totalPages, page + 2); i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-q="@q"
                           asp-route-vaiTro="@vaiTro">@i</a>
                    </li>
                }
                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page + 1)"
                       asp-route-q="@q"
                       asp-route-vaiTro="@vaiTro">»</a>
                </li>
            </ul>
        </nav>

        <form method="get" class="d-flex align-items-center gap-2">
            <input type="hidden" name="q" value="@q" />
            <input type="hidden" name="vaiTro" value="@vaiTro" />
            <div class="input-group" style="width: 180px;">
                <input type="number" name="page" min="1" max="@totalPages" value="@@page" class="form-control" />
                <button type="submit" class="btn btn-primary btn-nowrap">
                    <i class="bi bi-box-arrow-in-right"></i> Đi tới
                </button>
            </div>
            <span class="text-muted small">/ @totalPages</span>
        </form>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
        .btn-nowrap { white-space: nowrap; }

        .btn-primary {
            background-color: #0d6efd !important;
            border-color: #0d6efd !important;
            color: #fff !important;
        }
        .btn-danger {
            background-color: #dc3545 !important;
            border-color: #dc3545 !important;
            color: #fff !important;
        }
        .btn-warning {
            background-color: #ffc107 !important;
            border-color: #ffc107 !important;
            color: #212529 !important;
        }

        .btn-gradient-green {
            background: linear-gradient(45deg, #2e7d32, #43a047);
            color: #fff !important;
            border: none;
            transition: all .25s ease;
        }
        .btn-gradient-green:hover {
            background: linear-gradient(45deg, #1b5e20, #2e7d32);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,.15);
        }

        .table thead.table-success th {
            background-color: #198754 !important;
            color: #fff !important;
        }

        .pagination .page-item.active .page-link {
            background-color: #0d6efd !important;
            border-color: #0d6efd !important;
            color: #fff !important;
        }
        .pagination .page-link { color: #0d6efd; }
        .pagination .page-link:hover {
            background-color: #0d6efd !important;
            color: #fff !important;
        }

        .table th, .table td {
            text-align: center;
            vertical-align: middle;
        }

        /* ✅ chữ trắng trong badge vai trò */
        .badge { color: #fff !important; }
    </style>
}
