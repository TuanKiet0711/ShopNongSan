@model TaiKhoan
@{
    ViewData["Title"] = "Xoá tài khoản";

    string RoleBadgeClass(string role) =>
        role?.Equals("Admin", StringComparison.OrdinalIgnoreCase) == true ? "bg-danger text-white" :
        role?.Equals("Staff", StringComparison.OrdinalIgnoreCase) == true ? "bg-primary text-white" :
        "bg-success text-white";
}

<h2 class="fw-bold mb-4 text-danger">
    <i class="bi bi-trash3-fill me-2"></i> Xoá tài khoản
</h2>

<div class="alert alert-warning d-flex align-items-center shadow-sm rounded-3">
    <i class="bi bi-exclamation-triangle-fill fs-4 me-2"></i>
    <div>
        Hành động này <u>không thể hoàn tác</u>. Hãy chắc chắn rằng bạn muốn xoá tài khoản này.
    </div>
</div>

<div class="card shadow-lg border-0 rounded-4 mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3 col-lg-2 fw-semibold">Họ tên</dt>
            <dd class="col-sm-9 col-lg-10">@Model.HoTen</dd>

            <dt class="col-sm-3 col-lg-2 fw-semibold">Tên đăng nhập</dt>
            <dd class="col-sm-9 col-lg-10">@Model.TenDangNhap</dd>

            <dt class="col-sm-3 col-lg-2 fw-semibold">Vai trò</dt>
            <dd class="col-sm-9 col-lg-10">
                <span class="badge px-3 py-2 fw-semibold rounded-pill @RoleBadgeClass(Model.VaiTro)">
                    @Model.VaiTro
                </span>
            </dd>

            <dt class="col-sm-3 col-lg-2 fw-semibold">Mật khẩu</dt>
            <dd class="col-sm-9 col-lg-10 text-muted">@Model.MatKhau</dd>

            <dt class="col-sm-3 col-lg-2 fw-semibold">Ngày tạo</dt>
            <dd class="col-sm-9 col-lg-10">@Model.NgayTao.ToString("dd/MM/yyyy")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-gradient-red px-4 fw-semibold shadow-sm"
            onclick="return confirm('Bạn có chắc muốn xoá tài khoản này không?')">
        <i class="bi bi-trash"></i> Xác nhận xoá
    </button>
    <a asp-action="Index" class="btn btn-secondary px-4 fw-semibold shadow-sm">
        <i class="bi bi-arrow-left-circle"></i> Huỷ
    </a>
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
        /* Gradient đỏ cho nút xoá */
        .btn-gradient-red {
            background: linear-gradient(45deg,#e53935,#b71c1c);
            border: none;
            color: #fff !important;
            border-radius: .5rem;
            transition: .2s ease-in-out;
        }

            .btn-gradient-red:hover {
                filter: brightness(.95);
                transform: translateY(-1px);
                box-shadow: 0 4px 10px rgba(0,0,0,.15);
            }

        /* Cảnh báo */
        .alert-warning {
            background: #fff3cd;
            color: #856404;
            border: none;
            padding: 1rem 1.25rem;
        }

        .card {
            border-radius: 1rem;
        }

        dt {
            color: #555;
        }

        .badge {
            font-size: 0.9rem;
            font-weight: 600;
        }
    </style>
}
