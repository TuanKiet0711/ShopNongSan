@model SanPham
@{
    ViewData["Title"] = "Sửa sản phẩm";
    string ImgUrl(string? p) =>
        string.IsNullOrWhiteSpace(p) ? Url.Content("~/images/no-image.png")
        : (p!.StartsWith("/") ? Url.Content("~" + p) : Url.Content("~/images/" + p));
}

<div class="container-xxl px-0">
    <form asp-area="Admin" asp-controller="SanPhams" asp-action="Edit"
          method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="text-danger small mb-2" asp-validation-summary="ModelOnly"></div>

                <div class="row g-4">
                    <!-- TRÁI: THÔNG TIN -->
                    <div class="col-lg-7">
                        <div class="ns-section-title">Thông tin sản phẩm</div>

                        <div class="mb-3">
                            <label class="form-label">Tên <span class="text-danger">*</span></label>
                            <input asp-for="Ten" class="form-control ns-control" required />
                            <span asp-validation-for="Ten" class="text-danger small"></span>
                            <div class="invalid-feedback">Vui lòng nhập tên sản phẩm.</div>
                        </div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Danh mục <span class="text-danger">*</span></label>
                                <select asp-for="DanhMucId" asp-items="ViewBag.DanhMucId"
                                        class="form-select select2 ns-control" required>
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="DanhMucId" class="text-danger small"></span>
                                <div class="invalid-feedback">Vui lòng chọn danh mục.</div>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Thương hiệu</label>
                                <select asp-for="ThuongHieuId" asp-items="ViewBag.ThuongHieuId"
                                        class="form-select select2 ns-control" data-allow-clear="true">
                                    <option value=""></option>
                                </select>
                                <span asp-validation-for="ThuongHieuId" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-6">
                                <label class="form-label">Giá (đ) <span class="text-danger">*</span></label>
                                <!-- Hiển thị đẹp -->
                                <input type="text" id="GiaDisplay" class="form-control ns-control" inputmode="numeric" required />
                                <!-- Giá thật để bind Model.Gia -->
                                <input asp-for="Gia" type="hidden" id="Gia" />
                                <span asp-validation-for="Gia" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">Số lượng tồn <span class="text-danger">*</span></label>
                                <input asp-for="SoLuongTon" type="number" min="0" class="form-control ns-control" required />
                                <span asp-validation-for="SoLuongTon" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>

                    <!-- PHẢI: ẢNH (STICKY) -->
                    <div class="col-lg-5">
                        <div class="ns-sticky">
                            <div class="ns-section-title">Ảnh sản phẩm</div>

                            <div class="ns-uploader card border-0 shadow-xs">
                                <div class="card-body">
                                    <div class="ns-thumb-wrap mb-3">
                                        <!-- Hiện ảnh hiện tại -->
                                        <img id="preview" src="@ImgUrl(Model.HinhAnh)" alt="@Model.Ten" class="ns-thumb-img" />
                                    </div>

                                    <label class="form-label">Đổi hình ảnh</label>
                                    <input type="file" name="HinhAnhFile" id="HinhAnhFile"
                                           class="form-control ns-control" accept=".jpg,.jpeg,.png,.webp,.gif" />
                                    <span asp-validation-for="HinhAnh" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /row -->
            </div>

            <!-- ACTION BAR -->
            <div class="card-footer bg-white d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div></div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success btn-nowrap">Cập nhật</button>
                    <a asp-area="Admin" asp-controller="SanPhams" asp-action="Index"
                       class="btn btn-outline-secondary btn-nowrap">Quay lại</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <!-- jQuery + Select2 -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        (function () {
            // Select2
            $('.select2').each(function () {
                const allowClear = $(this).attr('data-allow-clear') === 'true';
                $(this).select2({
                    allowClear: allowClear,
                    width: '100%',
                    minimumResultsForSearch: 5
                });
            });

            // Preview ảnh (nếu chọn ảnh mới)
            const input = document.getElementById('HinhAnhFile');
            const preview = document.getElementById('preview');
            if (input) {
                input.addEventListener('change', function () {
                    const file = this.files && this.files[0];
                    if (!file) return;
                    const url = URL.createObjectURL(file);
                    preview.src = url;
                });
            }

            // Định dạng giá: bind từ hidden asp-for="Gia" sang GiaDisplay và ngược lại
            const numberFormat = new Intl.NumberFormat('vi-VN');
            const giaDisplay = document.getElementById('GiaDisplay');
            const giaHidden  = document.getElementById('Gia');

            // Khi load trang Edit, nếu Model.Gia có giá trị, render vào GiaDisplay
            if (giaHidden && giaHidden.value) {
                const n = Number((giaHidden.value + '').replace(',', '.'));
                if (!isNaN(n)) giaDisplay.value = numberFormat.format(n);
            }

            const onlyDigits = (str) => (str || '').replace(/[^\d]/g, '');

            function syncGia() {
                const raw = onlyDigits(giaDisplay.value);
                if (!raw) { giaHidden.value = ''; return; }
                const val = Number(raw) || 0;
                giaHidden.value = val.toString();
                giaDisplay.value = numberFormat.format(val);
            }

            giaDisplay.addEventListener('blur', syncGia);

            document.querySelector('form').addEventListener('submit', function (event) {
                syncGia();
                if (!this.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                this.classList.add('was-validated');
            });
        })();
    </script>

    <style>
        /* Chủ đề xanh nông sản */
        :root {
            --ns-green: #16a34a;
            --ns-soft: #eefaf1;
            --ns-ink: #14532d;
        }

        .ns-section-title {
            font-weight: 700;
            color: var(--ns-ink);
            margin-bottom: .75rem;
        }

        /* Ô input đồng đều */
        .ns-control {
            height: 44px;
        }

        .form-control, .form-select {
            border-radius: 10px;
        }

        .select2-container .select2-selection--single {
            height: 44px !important;
            border-radius: 10px !important;
            border-color: #ced4da;
            display: flex;
            align-items: center;
        }

        .select2-selection__rendered {
            line-height: 44px !important;
        }

        .select2-selection__arrow {
            height: 44px !important;
        }

        /* Ảnh cố định bên phải (sticky) */
        .ns-sticky {
            position: sticky;
            top: 12px;
        }

        .ns-uploader .ns-thumb-wrap {
            width: 100%;
            aspect-ratio: 1/1;
            background: #f8fafc;
            border: 1px dashed #cbd5e1;
            border-radius: 14px;
            display: grid;
            place-items: center;
            overflow: hidden;
        }

        .ns-thumb-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .shadow-xs {
            box-shadow: 0 .2rem .5rem rgba(0,0,0,.05);
        }

        /* Nút */
        .btn-success {
            background-color: var(--ns-green) !important;
            border-color: var(--ns-green) !important;
            border-radius: 10px;
            font-weight: 600;
        }

            .btn-success:hover {
                filter: brightness(0.95);
            }

        .btn-outline-secondary {
            border-radius: 10px;
        }

        .card {
            border-radius: 16px;
        }

        .card-footer {
            border-top: 1px solid #f1f5f9;
            border-bottom-left-radius: 16px;
            border-bottom-right-radius: 16px;
        }
    </style>
}
