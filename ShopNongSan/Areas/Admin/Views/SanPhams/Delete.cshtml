@model SanPham
@{
    ViewData["Title"] = "Xoá sản phẩm";
    string ImgUrl(string? p) =>
        string.IsNullOrWhiteSpace(p) ? Url.Content("~/images/no-image.png")
        : (p!.StartsWith("/") ? Url.Content("~" + p) : Url.Content("~/images/" + p));
}

<div class="container-xxl px-0">
    <form asp-area="Admin" asp-controller="SanPhams" asp-action="Delete"
          method="post" class="needs-validation">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="card border-0 shadow-sm">
            <div class="card-body">
                <div class="row g-4">
                    <!-- THÔNG TIN -->
                    <div class="col-lg-7">
                        <div class="ns-section-title text-danger">Bạn có chắc muốn xoá sản phẩm?</div>

                        <h5 class="fw-bold">@Model.Ten</h5>
                        <div>Danh mục: @Model.DanhMuc?.Ten</div>
                        <div>Thương hiệu: @Model.ThuongHieu?.Ten</div>
                        @if (!string.IsNullOrWhiteSpace(Model.MoTa))
                        {
                            <div class="mt-2"><strong>Mô tả:</strong> @Model.MoTa</div>
                        }

                        <div>Giá: @Model.Gia.ToString("N0") đ</div>
                        <div>Số lượng tồn: @Model.SoLuongTon</div>
                    </div>

                    <!-- ẢNH -->
                    <div class="col-lg-5">
                        <div class="ns-sticky">
                            <div class="ns-section-title">Ảnh sản phẩm</div>
                            <div class="ns-uploader card border-0 shadow-xs">
                                <div class="card-body">
                                    <div class="ns-thumb-wrap">
                                        <img src="@ImgUrl(Model.HinhAnh)" alt="@Model.Ten" class="ns-thumb-img" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div><!-- /row -->
            </div>

            <!-- ACTION BAR -->
            <div class="card-footer bg-white d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div></div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger btn-nowrap"
                            onclick="return confirm('Xoá vĩnh viễn sản phẩm này?')">
                        Xoá
                    </button>
                    <a asp-area="Admin" asp-controller="SanPhams" asp-action="Index"
                       class="btn btn-outline-secondary btn-nowrap">Huỷ</a>
                </div>
            </div>
        </div>
    </form>
</div>

<style>
    .ns-section-title {
        font-weight: 700;
        color: #991b1b;
        margin-bottom: .75rem;
    }

    .ns-sticky {
        position: sticky;
        top: 12px;
    }

    .ns-uploader .ns-thumb-wrap {
        width: 100%;
        aspect-ratio: 1/1;
        background: #f8fafc;
        border: 1px dashed #cbd5e1;
        border-radius: 14px;
        display: grid;
        place-items: center;
        overflow: hidden;
    }

    .ns-thumb-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .shadow-xs {
        box-shadow: 0 .2rem .5rem rgba(0,0,0,.05);
    }

    .btn-danger {
        border-radius: 10px;
        font-weight: 600;
    }

    .btn-outline-secondary {
        border-radius: 10px;
    }

    .card {
        border-radius: 16px;
    }

    .card-footer {
        border-top: 1px solid #f1f5f9;
        border-bottom-left-radius: 16px;
        border-bottom-right-radius: 16px;
    }
</style>
