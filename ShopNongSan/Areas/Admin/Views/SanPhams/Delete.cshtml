@model SanPham
@{
    ViewData["Title"] = "Xoá sản phẩm";
    string ImgUrl(string? p) =>
        string.IsNullOrWhiteSpace(p) ? Url.Content("~/images/no-image.png")
        : (p.StartsWith("/") ? Url.Content("~" + p) : Url.Content("~/images/" + p));
}
<h2 class="mb-3">Xoá sản phẩm</h2>

<div class="card p-3">
    <div class="d-flex gap-3">
        <img src="@ImgUrl(Model.HinhAnh)" style="width:120px;height:120px;object-fit:cover" class="rounded border" />
        <div>
            <h5>@Model.Ten</h5>
            <div>Danh mục: @Model.DanhMuc?.Ten</div>
            <div>Thương hiệu: @Model.ThuongHieu?.Ten</div>
            <div>Giá: @Model.Gia.ToString("N0") đ</div>
            <div>Tồn: @Model.SoLuongTon</div>
        </div>
    </div>

    <form asp-area="Admin" asp-controller="SanPhams" asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Xoá vĩnh viễn sản phẩm này?')">Xoá</button>
        <a asp-area="Admin" asp-controller="SanPhams" asp-action="Index" class="btn btn-secondary">Huỷ</a>
    </form>
</div>
