@model IEnumerable<SanPham>
@{
    ViewData["Title"] = "Sản phẩm";
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalCount = ViewBag.TotalCount ?? 0;
    string q = ViewBag.Q as string ?? "";
    int? dm = ViewBag.FilterDanhMucId as int?;
    int? th = ViewBag.FilterThuongHieuId as int?;

    string ImgUrl(string? p) =>
        string.IsNullOrWhiteSpace(p) ? Url.Content("~/images/no-image.png")
        : (p.StartsWith("/") ? Url.Content("~" + p) : Url.Content("~/images/" + p));
}

<h2 class="mb-3">Quản lý sản phẩm</h2>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <!-- Tìm kiếm -->
            <div class="col-lg-5">
                <label class="form-label mb-1">Tìm kiếm</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="q" value="@q" class="form-control"
                           placeholder="Tên sản phẩm, danh mục, thương hiệu..." />
                </div>
            </div>

            <!-- Danh mục -->
            <div class="col-lg-3">
                <label class="form-label mb-1">Danh mục</label>
                <select name="danhMucId" asp-items="ViewBag.DanhMucId" class="form-select">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <!-- Thương hiệu -->
            <div class="col-lg-3">
                <label class="form-label mb-1">Thương hiệu</label>
                <select name="thuongHieuId" asp-items="ViewBag.ThuongHieuId" class="form-select">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <!-- Lọc + Xóa bộ lọc -->
            <div class="col-md-4 col-lg-3 col-xl-2">
                <div class="d-flex gap-2">
                    <input type="hidden" name="page" value="1" />
                    <button type="submit" class="btn btn-primary px-3 btn-nowrap">
                        <i class="bi bi-funnel"></i> Lọc
                    </button>
                    <a asp-area="Admin" asp-controller="SanPhams" asp-action="Index"
                       class="btn btn-outline-secondary px-3 btn-nowrap">
                        <i class="bi bi-x-circle"></i> Xóa bộ lọc
                    </a>
                </div>
            </div>

            <!-- Tổng số + Thêm mới -->
            <div class="col-12 d-flex justify-content-between align-items-center">
                <span class="small text-muted">Tổng: @totalCount</span>
                <a asp-area="Admin" asp-controller="SanPhams" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Thêm mới
                </a>
            </div>
        </form>
    </div>
</div>

<!-- BẢNG -->
<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr class="text-nowrap">
                <th style="min-width:260px">Tên</th>
                <th>Danh mục</th>
                <th>Thương hiệu</th>
                <th class="text-end">Giá</th>
                <th class="text-center">Tồn</th>
                <th class="text-center">Ảnh</th>
                <th class="text-end" style="width:140px">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sp in Model)
            {
                var stockCls = sp.SoLuongTon == 0 ? "bg-danger"
                : sp.SoLuongTon <= 20 ? "bg-warning text-dark"
                : "bg-success";

                <tr>
                    <td class="fw-semibold">
                        @sp.Ten
                        <div class="text-muted small">#@sp.Id</div>
                    </td>
                    <td class="text-muted">@sp.DanhMuc?.Ten</td>
                    <td class="text-muted">@sp.ThuongHieu?.Ten</td>
                    <td class="text-end fw-semibold">@sp.Gia.ToString("N0") đ</td>
                    <td class="text-center"><span class="badge @stockCls">@sp.SoLuongTon</span></td>
                    <td class="text-center">
                        <img src="@ImgUrl(sp.HinhAnh)" alt="@sp.Ten"
                             class="rounded" style="width:60px;height:60px;object-fit:cover" />
                    </td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@sp.Id" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@sp.Id" class="btn btn-sm btn-danger">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- PHÂN TRANG -->
@if (totalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination mb-0">
            <li class="page-item @(page <= 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(page - 1)"
                   asp-route-q="@q"
                   asp-route-danhMucId="@dm"
                   asp-route-thuongHieuId="@th">«</a>
            </li>
            @for (int i = Math.Max(1, page - 2); i <= Math.Min(totalPages, page + 2); i++)
            {
                <li class="page-item @(i == page ? "active" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@i"
                       asp-route-q="@q"
                       asp-route-danhMucId="@dm"
                       asp-route-thuongHieuId="@th">@i</a>
                </li>
            }
            <li class="page-item @(page >= totalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@(page + 1)"
                   asp-route-q="@q"
                   asp-route-danhMucId="@dm"
                   asp-route-thuongHieuId="@th">»</a>
            </li>
        </ul>
    </nav>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
}
<style>
    .btn-nowrap {
        white-space: nowrap;
    }
</style>
