@model IEnumerable<SanPham>
@{
    ViewData["Title"] = "Sản phẩm";
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalCount = ViewBag.TotalCount ?? 0;
    string q = ViewBag.Q as string ?? "";
    int? dm = ViewBag.FilterDanhMucId as int?;
    int? th = ViewBag.FilterThuongHieuId as int?;

    string ImgUrl(string? p) =>
        string.IsNullOrWhiteSpace(p) ? Url.Content("~/images/no-image.png")
        : (p.StartsWith("/") ? Url.Content("~" + p) : Url.Content("~/images/" + p));
}

<h2 class="fw-bold mb-4 text-success">
    <i class="bi bi-basket2"></i> Quản lý sản phẩm
</h2>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <!-- Tìm kiếm -->
            <div class="col-lg-5 col-md-6">
                <label class="form-label mb-1 fw-semibold">Tìm kiếm</label>
                <div class="input-group">
                    <span class="input-group-text bg-light"><i class="bi bi-search"></i></span>
                    <input type="text" name="q" value="@q" class="form-control"
                           placeholder="Tên sản phẩm, danh mục, thương hiệu, mô tả..." />
                </div>
            </div>

            <!-- Danh mục -->
            <div class="col-lg-3 col-md-3">
                <label class="form-label mb-1 fw-semibold">Danh mục</label>
                <select name="danhMucId" asp-items="ViewBag.DanhMucId" class="form-select select2">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <!-- Thương hiệu -->
            <div class="col-lg-3 col-md-3">
                <label class="form-label mb-1 fw-semibold">Thương hiệu</label>
                <select name="thuongHieuId" asp-items="ViewBag.ThuongHieuId" class="form-select select2">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <!-- Lọc + Xoá -->
            <div class="col-lg-1 col-md-12 d-flex gap-2 align-items-end">
                <input type="hidden" name="page" value="1" />
                <button type="submit" class="btn btn-primary flex-fill" title="Lọc">
                    <i class="bi bi-funnel"></i>
                </button>
                <a asp-area="Admin" asp-controller="SanPhams" asp-action="Index"
                   class="btn btn-danger flex-fill" title="Xóa bộ lọc">
                    <i class="bi bi-x-circle"></i>
                </a>
            </div>

            <!-- Tổng + Thêm mới -->
            <div class="col-12 d-flex justify-content-between align-items-center mt-2">
                <span class="small text-muted">Tổng: @totalCount</span>
                <a asp-area="Admin" asp-controller="SanPhams" asp-action="Create"
                   class="btn btn-gradient-green fw-semibold shadow-sm px-4">
                    <i class="bi bi-plus-circle"></i> Thêm mới sản phẩm
                </a>
            </div>
        </form>
    </div>
</div>

<!-- BẢNG -->
<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover table-bordered align-middle mb-0">
        <thead class="table-success">
            <tr class="text-center">
                <th style="min-width:220px">Tên</th>
                <th style="min-width:180px">Mô tả</th>
                <th>Danh mục</th>
                <th>Thương hiệu</th>
                <th class="text-center">Giá</th>
                <th class="text-center">Tồn</th>
                <th class="text-center">Ảnh</th>
                <th class="text-center" style="width:160px">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sp in Model)
            {
                string stockCls = sp.SoLuongTon == 0 ? "bg-danger"
                                 : sp.SoLuongTon <= 20 ? "bg-warning"
                                 : "bg-success";

                <tr>
                    <td class="fw-semibold">
                        @sp.Ten
                        <div class="text-muted small">#@sp.Id</div>
                    </td>

                    <td>
                        @if (!string.IsNullOrWhiteSpace(sp.MoTa))
                        {
                            <div class="text-truncate" style="max-width:180px;" title="@sp.MoTa">
                                @(sp.MoTa.Length > 100 ? sp.MoTa.Substring(0, 100) + "…" : sp.MoTa)
                            </div>
                        }
                        else { <span class="text-muted fst-italic">—</span> }
                    </td>

                    <td class="text-muted">@sp.DanhMuc?.Ten</td>
                    <td class="text-muted">@sp.ThuongHieu?.Ten</td>
                    <td class="text-end fw-semibold">@sp.Gia.ToString("N0") đ</td>

                    <td class="text-center">
                        <!-- Badge tồn: nền theo lớp, chữ trắng -->
                        <span class="badge rounded-pill px-3 py-2 text-white @stockCls">
                            @sp.SoLuongTon
                        </span>
                    </td>

                    <td class="text-center">
                        <img src="@ImgUrl(sp.HinhAnh)" alt="@sp.Ten"
                             class="rounded" style="width:60px;height:60px;object-fit:cover" />
                    </td>

                    <td class="text-end">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@sp.Id" class="btn btn-sm btn-warning text-dark">
                                <i class="bi bi-pencil-square"></i> Sửa
                            </a>
                            <a asp-action="Delete" asp-route-id="@sp.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Xóa
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- PHÂN TRANG -->
@if (totalPages > 1)
{
    <div class="mt-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(page <= 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page - 1)"
                       asp-route-q="@q"
                       asp-route-danhMucId="@dm"
                       asp-route-thuongHieuId="@th">«</a>
                </li>

                @for (int i = Math.Max(1, page - 2); i <= Math.Min(totalPages, page + 2); i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-q="@q"
                           asp-route-danhMucId="@dm"
                           asp-route-thuongHieuId="@th">@i</a>
                    </li>
                }

                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page + 1)"
                       asp-route-q="@q"
                       asp-route-danhMucId="@dm"
                       asp-route-thuongHieuId="@th">»</a>
                </li>
            </ul>
        </nav>

        <!-- Đi tới trang -->
        <form method="get" class="d-flex align-items-center gap-2">
            <input type="hidden" name="q" value="@q" />
            <input type="hidden" name="danhMucId" value="@dm" />
            <input type="hidden" name="thuongHieuId" value="@th" />
            <div class="input-group" style="width: 180px;">
                <input type="number" name="page" min="1" max="@totalPages" value="@@page" class="form-control" />
                <button type="submit" class="btn btn-primary btn-nowrap">
                    <i class="bi bi-box-arrow-in-right"></i> Đi tới
                </button>
            </div>
            <span class="text-muted small">/ @totalPages</span>
        </form>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <script>
        $(function () {
            $('.select2').select2({
                placeholder: '-- Tất cả --',
                allowClear: true,
                width: '100%'
            });
        });
    </script>
}

<style>
    .btn-nowrap { white-space: nowrap; }

    /* Chiều cao đồng bộ */
    .form-control,
    .form-select,
    .select2-container .select2-selection--single {
        height: 44px !important;
        border-radius: 10px !important;
    }
    .select2-selection__rendered { line-height: 44px !important; }
    .select2-selection__arrow { height: 44px !important; }

    /* Nút Thêm mới đẹp */
    .btn-gradient-green {
        background: linear-gradient(45deg, #2e7d32, #43a047);
        color: #fff !important;
        border: none;
        transition: all 0.3s ease;
    }
    .btn-gradient-green:hover {
        background: linear-gradient(45deg, #1b5e20, #2e7d32);
        transform: translateY(-2px);
        box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    /* Header bảng */
    .table thead.table-success th {
        background-color: #2e7d32 !important;
        color: #fff !important;
    }

    /* Badge tồn chữ trắng */
    .badge { color: #fff !important; font-weight: 600; }

    /* Pagination */
    .pagination .page-item.active .page-link {
        background-color: #2e7d32 !important;
        border-color: #2e7d32 !important;
        color: #fff !important;
    }
    .pagination .page-link { color: #2e7d32; }
    .pagination .page-link:hover {
        background-color: #2e7d32 !important;
        color: #fff !important;
    }

    .form-label { font-weight: 500; }
</style>
