@model IEnumerable<DanhMuc>
@{
    ViewData["Title"] = "Danh mục";
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalCount = ViewBag.TotalCount ?? 0;
    string q = ViewBag.Q as string ?? "";
}

<h2 class="mb-3">Quản lý danh mục</h2>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <!-- Tìm kiếm -->
            <div class="col-lg-5">
                <label class="form-label mb-1">Tìm kiếm</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="q" value="@q" class="form-control"
                           placeholder="Tên danh mục..." />
                </div>
            </div>

            <!-- Lọc + Xóa bộ lọc -->
            <div class="col-md-4 col-lg-3 col-xl-2">
                <div class="d-flex gap-2">
                    <input type="hidden" name="page" value="1" />
                    <button type="submit" class="btn btn-primary px-3 btn-nowrap">
                        <i class="bi bi-funnel"></i> Lọc
                    </button>
                    <a asp-area="Admin" asp-controller="SanPhams" asp-action="Index"
                       class="btn btn-outline-secondary px-3 btn-nowrap">
                        <i class="bi bi-x-circle"></i> Xóa bộ lọc
                    </a>
                </div>
            </div>

            <!-- Tổng số + Thêm mới -->
            <div class="col-12 d-flex justify-content-between align-items-center">
                <span class="small text-muted">Tổng: @totalCount</span>
                <a asp-area="Admin" asp-controller="SanPhams" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Thêm mới
                </a>
            </div>
        </form>
    </div>
</div>

<!-- BẢNG -->
<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr class="text-nowrap">
                <th>Tên danh mục</th>
                <th class="text-end" style="width:140px">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dm in Model)
            {
                <tr>
                    <td class="fw-semibold">@dm.Ten</td>
                    <td class="text-end">
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@dm.Id" class="btn btn-sm btn-warning">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@dm.Id" class="btn btn-sm btn-danger">Xóa</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
