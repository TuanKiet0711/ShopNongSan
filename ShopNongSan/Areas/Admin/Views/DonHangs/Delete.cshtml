@model ShopNongSan.Models.DonHang
@{
    ViewData["Title"] = "Xóa đơn " + Model.MaDonHang;

    string BadgeClass(string s)
    {
        return s switch
        {
            "Chờ xử lý" => "bg-warning text-dark",
            "Đã xác nhận" => "bg-primary",
            "Đang giao" => "bg-info text-dark",
            "Hoàn tất" => "bg-success",
            "Đã hủy" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

<div class="d-flex align-items-center mb-3 gap-2">
    <h2 class="mb-0 text-danger">Xóa đơn: @Model.MaDonHang</h2>
    <span class="badge @BadgeClass(Model.TrangThai)">@Model.TrangThai</span>
    <div class="ms-auto">
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-list"></i> Danh sách
        </a>
    </div>
</div>

<div class="alert alert-warning rounded-4 shadow-sm">
    <i class="bi bi-exclamation-triangle-fill me-1"></i>
    Chỉ xóa được đơn đã <b>Đã hủy</b>. Hành động này <u>không thể hoàn tác</u>.
</div>

<div class="card shadow-sm rounded-4 mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-2">Khách hàng</dt>
            <dd class="col-sm-10">@Model.TaiKhoan?.HoTen (@Model.TaiKhoanId)</dd>

            <dt class="col-sm-2">Trạng thái</dt>
            <dd class="col-sm-10"><span class="badge @BadgeClass(Model.TrangThai)">@Model.TrangThai</span></dd>

            <dt class="col-sm-2">Tổng tiền</dt>
            <dd class="col-sm-10">@Model.TongTien.ToString("N0") đ</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="d-flex gap-2">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger"><i class="bi bi-trash"></i> Xác nhận xóa</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Huỷ</a>
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <style>
        .rounded-4 {
            border-radius: 1rem;
        }
    </style>
}
