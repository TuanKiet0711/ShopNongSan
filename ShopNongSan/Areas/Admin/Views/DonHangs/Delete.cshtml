@model ShopNongSan.Models.DonHang
@{
    ViewData["Title"] = "Xóa đơn " + Model.MaDonHang;
}
<h2 class="mb-3 text-danger">Xóa đơn: @Model.MaDonHang</h2>

<div class="alert alert-warning">
    Chỉ nên xóa đơn đã <b>Cancelled</b>. Hành động này không thể hoàn tác.
</div>

<dl class="row">
    <dt class="col-sm-2">Khách hàng</dt>
    <dd class="col-sm-10">@Model.TaiKhoanId</dd>

    <dt class="col-sm-2">Trạng thái</dt>
    <dd class="col-sm-10">@Model.TrangThai</dd>

    <dt class="col-sm-2">Tổng tiền</dt>
    <dd class="col-sm-10">@Model.TongTien.ToString("N0") đ</dd>
</dl>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">Xác nhận xóa</button>
    <a asp-action="Index" class="btn btn-outline-secondary">Huỷ</a>
</form>
