@model ShopNongSan.Models.DonHang
@{
    ViewData["Title"] = "Chi tiết đơn " + Model.MaDonHang;
}

<div class="d-flex align-items-center mb-3" style="gap:.5rem">
    <h2 class="mb-0">Đơn: @Model.MaDonHang</h2>
    <span class="badge bg-secondary ms-2">@Model.TrangThai</span>
    <div class="ms-auto d-flex" style="gap:.5rem">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">Sửa</a>
        <a asp-action="Index" class="btn btn-sm btn-outline-secondary">Quay lại</a>
    </div>
</div>

<div class="row g-3">
    <!-- THÔNG TIN CHUNG -->
    <div class="col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Thông tin chung</h5>
                <dl class="row mb-0">
                    <dt class="col-5">Mã đơn</dt>
                    <dd class="col-7">@Model.MaDonHang</dd>

                    <dt class="col-5">Khách hàng</dt>
                    <dd class="col-7">@Model.TaiKhoan?.HoTen (@Model.TaiKhoanId)</dd>

                    <dt class="col-5">Số điện thoại</dt>
                    <dd class="col-7">@Model.TaiKhoan?.ThongTinNguoiDung?.SoDienThoai</dd>

                    <dt class="col-5">Địa chỉ</dt>
                    <dd class="col-7">@Model.TaiKhoan?.ThongTinNguoiDung?.DiaChi</dd>

                    <dt class="col-5">Ngày đặt</dt>
                    <dd class="col-7">@Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</dd> <!-- 👈 thêm -->

                    <dt class="col-5">Ngày giao dự kiến</dt>
                    <dd class="col-7">
                        @(Model.NgayGiao.HasValue 
                        ? Model.NgayGiao.Value.ToString("dd/MM/yyyy") 
                        : "Chưa chọn")
                    </dd> <!-- 👈 thêm -->

                <dt class="col-5">Ghi chú</dt>
                <dd class="col-7">@Model.TaiKhoan?.ThongTinNguoiDung?.GhiChu</dd>

    <dt class="col-5">Phương thức TT</dt>
    <dd class="col-7">
        @{
            var pttt = Model.TaiKhoan?.ThongTinNguoiDung?.PhuongThucThanhToan;
            string ptttText = pttt == "BANK"
                ? "Chuyển khoản"
                : (pttt == "COD" ? "Thanh toán khi nhận" : "");
        }
        @ptttText
    </dd>

    <dt class="col-5">Trạng thái</dt>
    <dd class="col-7">@Model.TrangThai</dd>

    <dt class="col-5">Tổng tiền</dt>
    <dd class="col-7">@Model.TongTien.ToString("N0") đ</dd>
</dl>

            </div>
        </div>
    </div>

    <!-- SẢN PHẨM -->
    <div class="col-lg-8">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Sản phẩm</h5>
                <div class="table-responsive">
                    <table class="table table-bordered align-middle text-center mb-0">
                        <thead class="table-success">
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Đơn giá</th>
                                <th>SL</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in Model.DonHangChiTiets)
                            {
                                <tr>
                                    <td>@ct.SanPham?.Ten (@ct.SanPhamId)</td>
                                    <td>@ct.DonGia.ToString("N0") đ</td>
                                    <td>@ct.SoLuong</td>
                                    <td>@((ct.DonGia * ct.SoLuong).ToString("N0")) đ</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th colspan="3" class="text-end">Tổng cộng</th>
                                <th class="text-end">@Model.TongTien.ToString("N0") đ</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <p class="text-muted small mb-0">Chỉnh trạng thái trong trang Sửa.</p>
            </div>
        </div>
    </div>
</div>
