@model IEnumerable<ShopNongSan.Models.DonHang>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    int page = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    int totalCount = ViewBag.TotalCount ?? 0;
    string q = ViewBag.Q as string ?? "";
    string status = ViewBag.Status as string ?? "";
}

<h2 class="fw-bold mb-4 text-success">
    <i class="bi bi-receipt"></i> Quản lý đơn hàng
</h2>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <form method="get" class="row g-3 align-items-end">
            <!-- Tìm kiếm -->
            <div class="col-lg-5">
                <label class="form-label mb-1 fw-semibold text-success">Tìm kiếm</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="q" value="@q" class="form-control form-control-lg shadow-sm"
                           placeholder="Nhập mã đơn, tên khách hàng..." />
                </div>
            </div>

            <!-- Trạng thái -->
            <div class="col-lg-3">
                <label class="form-label mb-1 fw-semibold text-success">Trạng thái</label>
                <select name="status" class="form-select form-control-lg shadow-sm" asp-items="ViewBag.StatusList">
                    <option value="">-- Tất cả --</option>
                </select>
            </div>

            <!-- Lọc + Xóa bộ lọc -->
            <div class="col-md-4 col-lg-3 col-xl-2">
                <div class="d-flex gap-2">
                    <input type="hidden" name="page" value="1" />
                    <button class="btn btn-primary px-3 btn-nowrap fw-semibold">
                        <i class="bi bi-funnel"></i> Lọc
                    </button>
                    <a asp-action="Index" class="btn btn-danger px-3 btn-nowrap fw-semibold">
                        <i class="bi bi-x-circle"></i> Xóa lọc
                    </a>
                </div>
            </div>

            <!-- Tổng số -->
            <div class="col-12 d-flex justify-content-between align-items-center">
                <span class="small text-muted">Tổng: @totalCount</span>
            </div>
        </form>
    </div>
</div>

<!-- BẢNG -->
<div class="table-responsive shadow-sm rounded">
    <table class="table table-hover table-bordered align-middle mb-0">
        <thead class="table-success">
            <tr class="text-center">
                <th>Mã đơn</th>
                <th>Khách hàng</th>
                <th class="text-end">Tổng tiền</th>
                <th>Trạng thái</th>
                <th style="width:200px">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model)
            {
                string badgeClass = d.TrangThai switch
                {
                    "Chờ xử lý" => "status-pending",
                    "Đã xác nhận" => "status-confirmed",
                    "Đang giao" => "status-shipping",
                    "Hoàn tất" => "status-done",
                    "Đã hủy" => "status-cancel",
                    _ => "status-other"
                };

                <tr>
                    <td class="fw-semibold">@d.MaDonHang</td>
                    <td class="text-muted">@d.TaiKhoan?.HoTen</td>
                    <td class="text-end fw-semibold">@d.TongTien.ToString("N0") đ</td>
                    <td class="text-center">
                        <span class="badge @badgeClass">@d.TrangThai</span>
                    </td>
                    <td>
                        <div class="d-flex justify-content-center gap-1">
                            <a asp-action="Details" asp-route-id="@d.Id" class="btn btn-sm btn-outline-secondary btn-action">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-action="Edit" asp-route-id="@d.Id" class="btn btn-sm btn-warning text-dark btn-action">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@d.Id" class="btn btn-sm btn-danger btn-action">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- PHÂN TRANG -->
@if (totalPages > 1)
{
    <div class="mt-3 d-flex justify-content-between align-items-center flex-wrap gap-2">
        <nav>
            <ul class="pagination mb-0">
                <li class="page-item @(page <= 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page - 1)"
                       asp-route-status="@status"
                       asp-route-q="@q">«</a>
                </li>
                @for (int i = Math.Max(1, page - 2); i <= Math.Min(totalPages, page + 2); i++)
                {
                    <li class="page-item @(i == page ? "active" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-page="@i"
                           asp-route-status="@status"
                           asp-route-q="@q">@i</a>
                    </li>
                }
                <li class="page-item @(page >= totalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="Index"
                       asp-route-page="@(page + 1)"
                       asp-route-status="@status"
                       asp-route-q="@q">»</a>
                </li>
            </ul>
        </nav>
        <form method="get" class="d-flex align-items-center gap-2">
            <input type="hidden" name="status" value="@status" />
            <input type="hidden" name="q" value="@q" />
            <div class="input-group" style="width: 200px;">
                <input type="number" name="page" min="1" max="@totalPages" value="@@page" class="form-control" />
                <button type="submit" class="btn btn-primary btn-nowrap">
                    <i class="bi bi-box-arrow-in-right"></i> Đi tới
                </button>
            </div>
            <span class="text-muted small">/ @totalPages</span>
        </form>
    </div>
}

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
}

<style>
    .btn-nowrap {
        white-space: nowrap;
    }

    .btn-primary {
        background-color: #0d6efd !important;
        border-color: #0d6efd !important;
        color: #fff !important;
    }

    .btn-danger {
        background-color: #dc3545 !important;
        border-color: #dc3545 !important;
        color: #fff !important;
    }

    .btn-warning {
        background-color: #ffc107 !important;
