@{
    ViewData["Title"] = "Không có quyền";
    Layout = "~/Areas/Customer/Views/Shared/_CustomerLayout.cshtml";
}
<div class="d-flex align-items-center justify-content-center" style="min-height:50vh">
    <div class="text-center">
        <h1 class="display-6 text-danger mb-3">403 — Bạn không có quyền truy cập</h1>
        <p class="text-muted mb-4">
            Tài khoản hiện tại không có quyền vào khu vực này.
        </p>

        @if (User?.Identity?.IsAuthenticated ?? false)
        {
            <a class="btn btn-success me-2" asp-area="Customer" asp-controller="SanPhams" asp-action="Index">
                Về trang chủ
            </a>
        }
        else
        {
            <a class="btn btn-primary me-2" asp-area="Customer" asp-controller="TaiKhoan" asp-action="DangNhap">
                Đăng nhập
            </a>
            <a class="btn btn-outline-secondary" asp-area="Customer" asp-controller="TaiKhoan" asp-action="DangKy">
                Đăng ký
            </a>
        }
    </div>
</div>
